require_relative 'filemanager'
require_relative 'teacher'

class TeacherManager < FileManager
  def initialize
    super('data/teachers.json')
  end

  def extract_teachers(teachers)
    new_data = []
    teachers.each do |teacher|
      new_data << { age: teacher.age, name: teacher.name, specialization: teacher.specialization }
    end
    save(new_data)
  end

  def create_teachers
    teachers = []
    @data.each do |teacher|
      teachers << Teacher.new(teacher['age'], teacher['name'], teacher['specialization'])
    end
    teachers
  end
end
